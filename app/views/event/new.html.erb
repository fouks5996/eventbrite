<div style="display:flex" >
    <div class="pan" style='background-color: #D9AFD9;background-image: linear-gradient(0deg, #D9AFD9 0%, #97D9E1 100%);' >
            <h1>Create Event</h1>
  </div>
  <div class="pan left">
        <div class="form-wrap" >
      <div>
            <%= form_tag url_for(action: 'create'), method: "post" do %>
            <div style="display:flex; width:500px">
                  <div style="margin-right:80px" >
                        <%= label_tag 'Title' %>
                        <%= text_field_tag 'title', (@event.title if !@event.nil?) %>

                        <%= label_tag 'Date' %>
                        <%= text_field_tag 'start_date', (@event.start_date if !@event.nil?) %>

                        <%= label_tag 'Duration' %>
                        <%= text_field_tag 'duration', (@event.duration if !@event.nil?) %>
                  </div>
                  <div>
                        <%= label_tag 'Price' %>
                        <%= text_field_tag 'price', (@event.price if !@event.nil?) %>

                        <%= label_tag 'Description' %>
                        <%= text_field_tag 'description', (@event.description if !@event.nil?) %>

                        <%= label_tag 'Location' %>
                        <%= text_field_tag 'location', (@event.location if !@event.nil?) %>
                  </div>
            </div>
                  <br /> 

                  <%= submit_tag "Create Event" %>
            <% end %>
            </div>
         </div>
      </div>
</div>